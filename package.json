{
    "name": "strongman-tracker-api",
    "version": "0.0.1",
    "license": "MIT",
    "scripts": {
        "build": "rm -rf ./out && yarn install",
        "dev": "nodemon",
        "docker:buildlocal": "yarn build && docker rmi -f zackaryclark/strongman-tracker-api && docker build ./ -t zackaryclark/strongman-tracker-api",
        "docker:buildrelease": "yarn build && docker build ./ -t zackaryclark/strongman-tracker-api:latest -t zackaryclark/strongman-tracker-api:$npm_package_version",
        "docker:pushrelease": "docker push zackaryclark/strongman-tracker-api:$npm_package_version && docker push zackaryclark/strongman-tracker-api:latest",
        "docker:release": "yarn docker:buildrelease && yarn docker:pushrelease",
        "git:pushtags": "git push --tags && git push",
        "kubelocal:use": "kubectl config use-context docker-desktop",
        "kubelocal:create": "kubectl create -f kubernetes/local-deployment.yml && kubectl apply -f kubernetes/local-nodeport.yml",
        "kubelocal:start": "yarn kubelocal:use && yarn docker:buildlocal && yarn kubelocal:create",
        "kubelocal:stop": "yarn kubelocal:use && kubectl delete deployment strongman-tracker-api --ignore-not-found && kubectl delete services strongman-tracker-api --ignore-not-found",
        "kubeprod:release": "kubectl config use-context prod && kubectl rollout restart deployment strongman-tracker-api-deployment",
        "migrate": "knex migrate:latest",
        "migrate:rollback": "knex migrate:rollback",
        "print:release": "echo -e \"\n\\033[0;32m  <==  Released API v$npm_package_version  ==>  \\033[0m\n\"",
        "start": "yarn migrate && node ./out/ts/src/index.js",
        "test": "jest",
        "preversion": "yarn test",
        "postversion": "yarn git:pushtags && yarn docker:release && sleep 5 && yarn kubeprod:release && yarn print:release",
        "postinstall": "tsc"
    },
    "dependencies": {
        "cors": "2.8.5",
        "express": "4.17.2",
        "knex": "1.0.1",
        "pg": "8.7.1"
    },
    "devDependencies": {
        "@types/cors": "2.8.12",
        "@types/express": "4.17.13",
        "@types/jest": "27.4.0",
        "@types/node": "17.0.10",
        "@types/supertest": "2.0.11",
        "@typescript-eslint/eslint-plugin": "5.10.0",
        "@typescript-eslint/parser": "5.10.0",
        "eslint": "8.7.0",
        "eslint-plugin-import": "2.25.4",
        "jest": "27.4.7",
        "nodemon": "2.0.15",
        "supertest": "6.2.2",
        "ts-jest": "27.1.3",
        "ts-node": "10.4.0",
        "typescript": "4.5.4"
    },
    "resolutions": {
        "@types/serve-static": "^1.13.10"
    },
    "private": true
}
