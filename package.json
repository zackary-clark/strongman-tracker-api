{
    "name": "strongman-tracker-api",
    "version": "0.3.6",
    "license": "GPL-3.0-only",
    "scripts": {
        "prebuild": "rm -rf ./out && npm install && npm run generate",
        "build": "tsc",
        "predev": "npm install",
        "dev": "concurrently \"nodemon\" \"graphql-codegen --watch\"",
        "docker:buildlocal": "npm run build && docker rmi -f zackaryclark/strongman-tracker-api && docker build ./ -t zackaryclark/strongman-tracker-api",
        "docker:buildarm": "docker build ./ --platform=linux/arm64 -t zackaryclark/strongman-tracker-api:$npm_package_version -t zackaryclark/strongman-tracker-api:latest",
        "docker:buildx86": "docker build ./ --platform=linux/amd64 -t us-central1-docker.pkg.dev/deft-bazaar-370800/strongman-tracker-api/strongman-tracker-api:$npm_package_version -t us-central1-docker.pkg.dev/deft-bazaar-370800/strongman-tracker-api/strongman-tracker-api:latest",
        "docker:buildrelease": "npm run build && npm run docker:buildarm && npm run docker:buildx86",
        "docker:check": "./scripts/checkForDockerDaemon.sh",
        "docker:pusharm": "docker push zackaryclark/strongman-tracker-api:$npm_package_version && docker push zackaryclark/strongman-tracker-api:latest",
        "docker:pushx86": "docker push us-central1-docker.pkg.dev/deft-bazaar-370800/strongman-tracker-api/strongman-tracker-api:$npm_package_version && docker push us-central1-docker.pkg.dev/deft-bazaar-370800/strongman-tracker-api/strongman-tracker-api:latest",
        "docker:pushrelease": "npm run docker:pusharm && npm run docker:pushx86",
        "docker:release": "npm run docker:buildrelease && npm run docker:pushrelease",
        "gcp:release": "gcloud run deploy strongman-tracker-api --image us-central1-docker.pkg.dev/deft-bazaar-370800/strongman-tracker-api/strongman-tracker-api:latest",
        "generate": "graphql-codegen",
        "git:pushtags": "git push --tags && git push",
        "migrate": "knex migrate:latest",
        "migrate:create": "knex migrate:make -x ts",
        "migrate:rollback": "knex migrate:rollback",
        "print:release": "echo -e \"\n\\033[0;32m  <==  Released API v$npm_package_version  ==>  \\033[0m\n\"",
        "seed:create": "knex seed:make",
        "seed": "knex seed:run",
        "prestart": "npm run migrate && npm run seed",
        "start": "node ./out/ts/src/index.js",
        "pretest": "npm install",
        "test": "jest --passWithNoTests",
        "preversion": "npm test && npm run docker:check",
        "postversion": "npm run git:pushtags && npm run docker:release && sleep 5 && npm run gcp:release && npm run print:release"
    },
    "dependencies": {
        "apollo-server-core": "3.11.1",
        "apollo-server-express": "3.10.0",
        "cors": "2.8.5",
        "datasource-sql": "2.0.1",
        "date-fns": "2.29.1",
        "express": "4.18.1",
        "express-jwt": "7.7.7",
        "graphql": "16.5.0",
        "jwks-rsa": "3.0.0",
        "jws": "4.0.0",
        "knex": "2.4.0",
        "pg": "8.7.3"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "2.11.6",
        "@graphql-codegen/typescript": "2.7.2",
        "@graphql-codegen/typescript-resolvers": "2.7.2",
        "@types/cors": "2.8.12",
        "@types/express": "4.17.13",
        "@types/jest": "28.1.6",
        "@types/jws": "3.2.4",
        "@types/node": "18.6.1",
        "@typescript-eslint/eslint-plugin": "5.31.0",
        "@typescript-eslint/parser": "5.31.0",
        "concurrently": "7.3.0",
        "eslint": "8.20.0",
        "eslint-plugin-import": "2.26.0",
        "jest": "28.1.3",
        "nodemon": "2.0.19",
        "ts-jest": "28.0.7",
        "ts-node": "10.9.1",
        "typescript": "4.7.4"
    },
    "private": true
}
